<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:DecoratorPanel>
            <g:VerticalPanel spacing="10">
                <g:ListBox styleName="custom-select-sm" ui:field="status">
                    <g:item value="">Выберите статус</g:item>
                    <g:item value="CREATED">CREATED</g:item>
                    <g:item value="IN_PROGRESS">IN_PROGRESS</g:item>
                    <g:item value="CLOSED">CLOSED</g:item>
                </g:ListBox>
                <g:TextBox styleName="form-control" ui:field="executor"/>
                <g:Button styleName="btn btn-outline-primary" ui:field="btnFilter">Применить фильтры</g:Button>
            </g:VerticalPanel>
    </g:DecoratorPanel>
</ui:UiBinder>