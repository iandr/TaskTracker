<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:DecoratorPanel>
        <g:FormPanel ui:field="form" method="POST">
            <g:VerticalPanel spacing="10">
                <g:HorizontalPanel>
                    <g:Label text="Название:" width="100px"/>
                    <g:TextBox name="title" ui:field="titleText"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Описание:" width="100px"/>
                    <g:TextBox name="description" ui:field="descriptionText"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Автор:" width="100px"/>
                    <g:ListBox name="owner" ui:field="ownerList"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Исполнитель:" width="100px"/>
                    <g:ListBox name="executor" ui:field="executorList"/>
                </g:HorizontalPanel>
                <g:Button ui:field="btnSubmit">Создать</g:Button>
            </g:VerticalPanel>
        </g:FormPanel>
    </g:DecoratorPanel>
</ui:UiBinder>