<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:DecoratorPanel>
        <g:FormPanel ui:field="form" method="GET">
            <g:VerticalPanel spacing="10">
                <g:ListBox name="status" ui:field="status">
                    <g:item value="CREATED">CREATED</g:item>
                    <g:item value="IN_PROGRESS">IN_PROGRESS</g:item>
                    <g:item value="CLOSED">CLOSED</g:item>
                </g:ListBox>
                <g:TextBox name="executor" ui:field="executor"/>
                <g:Button ui:field="btnSubmit">Применить фильтры</g:Button>
            </g:VerticalPanel>
        </g:FormPanel>
    </g:DecoratorPanel>
</ui:UiBinder>